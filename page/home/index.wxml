<view class="index" wx:if="{{ready}}">
    <view class="user-infos">
        <image class="user-logo" src="{{user.avatarUrl}}"></image>
        <view class="user-name">{{user.name || user.nickName}}</view>
    </view>

    <view wx:if="{{!user.name}}">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">考生姓名:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入真实姓名" bindinput="inputRealName" />
                </view>
            </view>
        </view>
        <view class="weui-cells__tips">姓名一旦填写, 将不能修改, 请确保信息真实.</view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="addRealName">保存</button>
        </view>
    </view>

    <view wx:elif="{{papers.length}}" class="weui-panel">
        <view class="weui-panel__hd">试题列表:</view>
        <view class="weui-panel__bd">
            <view class="weui-media-box weui-media-box_small-appmsg">
                <view class="weui-cells weui-cells_in-small-appmsg">
                    <navigator
                        wx:for-items="{{papers}}"
                        wx:key="{{item._id}}"
                        url="/page/exam/index?id={{item._id}}"
                        class="weui-cell weui-cell_access"
                        hover-class="weui-cell_active">
                        <view class="weui-cell__bd weui-cell_primary">
                            <view>{{item.name}}</view>
                        </view>
                        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                    </navigator>
                </view>
            </view>
        </view>
    </view>

    <view wx:else class="no-data">
        <view class="no-data-tips">您暂时没有待考试卷</view>
    </view>
</view>
